// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug CommandLineTest",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/CommandLineTest",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "Build CommandLineTest",
        "miDebuggerPath": "C:/mingw64/bin/gdb.exe" // Make sure GDB is installed
      }
    ]
  }
  